{
  "name": "html-starter",
  "version": "1.0.0",
  "description": "html starter",
  "main": "public/js/main",
  "scripts": {
    "start": "npm-run-all --parallel styles:watch browsersync tsc",
    "styles:watch": "node-sass src/sass -wo public/css --output-style compressed --source-map true",
    "tsc": "tsc  -w",
    "browsersync": "browser-sync start --server 'public' --files \"./public/*.html, ./public/**/*.js, ./public/**/*.css\""
  },
  "author": "ahsan",
  "license": "ISC",
  "dependencies": {
    "@types/node": "^14.14.8",
    "autoprefixer": "^9.8.6",
    "browser-sync": "^2.26.12",
    "browsersync": "0.0.1-security",
    "common-js": "^0.3.8",
    "node-sass": "^7.0.1",
    "npm-run-all": "^4.0.2",
    "postcss": "^7.0.32",
    "typescript": "^4.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "babel-loader": "^8.2.1",
    "webpack": "^5.5.1"
  }
}